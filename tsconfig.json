{
  "compilerOptions": {
    "jsx": "react-native",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "module": "esnext",
    "baseUrl": "./",
    "types": ["react", "react-native", "jest"],
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
